extends ../authed_layout

block au_content
    div.row-fluid
        div.span12
            table.table.table-bordered
                thead
                    th Name
                    th Status
                    th Actions
                - each project in projects
                    tr
                        td
                            a(href="/pages/12_project_details")= project.name
                        td= project.is_active
                        td
                            a(href="/pages/11_project_settings", alt="configure") settings
            a(href="/pages/10_project_creation") create
